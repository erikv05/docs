{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Narrative API",
  "colors": {
    "primary": "#1a1a1a",
    "light": "#FFFFFF",
    "dark": "#1a1a1a"

  },
  "customCss": "/custom.css",
  "favicon": "/favicon.svg",
  "modeToggle": {
    "default": "dark",
    "isHidden": true
  },
  "openapi": ["/api-reference/narrative-openapi.json", "/api-reference/instinct-openapi.json"],
  "navigation": {
    "tabs": [
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "Narrative API",
            "pages": [
              "api-reference/narrative/introduction",
              "api-reference/narrative/dynamic-thumbnails",
              "api-reference/narrative/generate-thumbnails"
            ]
          }
        ]
      },
      {
        "tab": "Instinct API",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/instinct/introduction"
            ]
          },
          {
            "group": "Endpoints",
            "pages": [
              "api-reference/instinct/generate-shortform-edit"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": []
    }
  },
  "logo": {
    "light": "/logo/light.png",
    "dark": "/logo/dark.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:founders@narrative.video"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Narrative",
      "href": "https://narrative.video"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/mintlify",
      "github": "https://github.com/mintlify",
      "linkedin": "https://linkedin.com/company/mintlify"
    }
  }
}
